{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noResolve": false,
    "rootDir": "./src",
    "outDir": "./lib",
    "declaration": true,
    "declarationMap": false,
    "diagnostics": true,
    "newLine": "LF",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strictNullChecks": true
  },
  "include": [
    "src/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "src/**/*.test.*",
    "lib",
    "dist"
  ],
  "compileOnSave": true,
  "typeAcquisition": {
    "enable": true
  }
}
